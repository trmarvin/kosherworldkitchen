# Wordpress - ignore core, configuration, examples, uploads and logs.
# https://github.com/github/gitignore/blob/main/WordPress.gitignore

# --- WordPress core ---
wp-admin/
wp-includes/
index.php
license.txt
readme.html
xmlrpc.php

# --- Configuration / environment ---
wp-config.php
wp-config-*.php
.env
*.env
*.sql
*.sql.gz

# --- Uploads, cache, and runtime data ---
wp-content/uploads/
wp-content/cache/
wp-content/upgrade/
wp-content/backups/
wp-content/ai1wm-backups/
wp-content/advanced-cache.php
wp-content/object-cache.php
wp-content/debug.log
wp-content/*.log

# --- Plugins ---
# Ignore all plugins except your custom ones (pattern: kwk-*)
wp-content/plugins/*
!wp-content/plugins/kwk-*/

# --- Themes ---
# Ignore all themes except your custom one (pattern: kwk-custom)
wp-content/themes/*
!wp-content/themes/kwk-custom/

# --- MU-plugins (keep your custom ones) ---
wp-content/mu-plugins/*
!wp-content/mu-plugins/*.php

# --- Dependency dirs ---
node_modules/
vendor/

# --- Local environment files ---
.DS_Store
Thumbs.db
*.code-workspace
.idea/
.vscode/
*.log
*.tmp
*.bak

# --- Local app (Local by Flywheel) artifacts ---
app/sql/
app/logs/
app/conf/
local.json
*.sock

# --- OS / misc ---
*.swp
*.swo
*.zip
*.tar.gz
