{
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "defaultPalette": false,
      "custom": false,
      "palette": [
        { "name": "Brand",  "slug": "brand",  "color": "#2B4D3A" },
        { "name": "Accent", "slug": "accent", "color": "#DDAA44" },
        { "name": "Ink",    "slug": "ink",    "color": "#1E1E1E" },
        { "name": "Paper",  "slug": "paper",  "color": "#FFFFFF" }
      ]
    },
    "typography": {
      "fluid": true,
      "customFontSize": false,
      "fontSizes": [
        { "slug": "base", "size": "1rem", "name": "Base" },
        { "slug": "xl",   "size": "1.25rem", "name": "XL" },
        { "slug": "2xl",  "size": "1.5rem", "name": "2XL" }
      ]
    },
    "layout": { "contentSize": "720px", "wideSize": "1100px" }
  },
  "styles": {
    "color": { "background": "var(--wp--preset--color--paper)", "text": "var(--wp--preset--color--ink)" },
    "typography": { "lineHeight": "1.6" },
    "elements": {
      "heading": { "typography": { "lineHeight": "1.25", "fontWeight": "700" } },
      "link": { "color": { "text": "var(--wp--preset--color--brand)" } }
    }
  }
}
